<script>
    $(document).ready(function () {
        $("#tooltip").hover(
            function () {
                $('.box-tooltip').addClass("show-tooltip");
            },
            function () {
                $('.box-tooltip').removeClass("show-tooltip");
            }
        );
        $(".box-tooltip").hover(
            function () {
                $('.box-tooltip').addClass("show-tooltip");
            },
            function () {
                $('.box-tooltip').removeClass("show-tooltip");
            }
        );

        var quantitiy = 1;
        var MaxQuantity = parseInt($("#MaxQuantity").text());
        if (MaxQuantity == 0) {
            $(".quantity-right-plus").attr("disabled", true);
            $(".quantity-right-plus").css("cursor", "not-allowed");
            $(".quantity-left-minus").css("cursor", "not-allowed")
            $(".quantity-left-plus").attr("disabled", true);
        }
        $('.quantity-right-plus').click(function (e) {
            // Stop acting like a button
            e.preventDefault();
            // Get the field name
            var quantity = parseInt($('#quantity').val());
            $('#quantity').val(quantity + 1);

            var getQuantity = parseInt($("#quantity").val());

            if (getQuantity >= MaxQuantity) {
                $(".quantity-right-plus").css("cursor", "not-allowed");
                $(".quantity-right-plus").attr("disabled", true);
                var ErrorMessage = "Số lượng đã đạt giới hạn";
                alertify.error(ErrorMessage);
                rrorMessage = ""
            }

        });

        $('.quantity-left-minus').click(function (e) {
            // Stop acting like a button
            e.preventDefault();
            // Get the field name
            var quantity = parseInt($('#quantity').val());
            // Increment
            if (quantity > 1) {
                $('#quantity').val(quantity - 1);
                $(".quantity-left-minus").css("cursor", "pointer")
            }
            if (quantitiy == 1) {
                $(".quantity-left-minus").css("cursor", "not-allowed")
                $(".quantity-left-plus").attr("disabled", true);
            }
            var getQuantity = parseInt($("#quantity").val());
            if (getQuantity < MaxQuantity) {
                $(".quantity-right-plus").css("cursor", "pointer");
                $(".quantity-right-plus").removeAttr("disabled")
            }
        });
    });
</script>