@model IEnumerable<Medimall.Models.Product>

@foreach (var item in Model)
{
    <div class="item">
        <a href="#"><img src="~/Vendor/img/products/@(item.ProductId).png" /></a>
        <div>
            <p>@item.ProductName</p>
            <h4>@String.Format("{0:0,0}", item.Price)đ/Sản phẩm</h4>
        </div>
        <button onclick="addToCart(@item.ProductId)">Thêm vào giỏ hàng</button>
    </div>
}

<script>
    function addToCart(productId) {
            window.location.href = '@Url.Action("AddToCart","Home")/' + productId;
    }

    @*$(document).ready(function () {
        function addToCart(productId) {
            window.location.href = '@Url.Action("AddToCart","Home")/' + productId;
        }
    })*@
</script>


