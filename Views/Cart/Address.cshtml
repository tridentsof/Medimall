@model Medimall.Models.Account

@if (Model == null)
{
<div class="info-client-wrap">
    <div class="info-client">
        <div>
            <button class="info-client-other">Thông tin</button>
            <a href="#">Chỉnh sửa</a>
        </div>

        <div>
            <p>Người nhận:</p>
            <input type="text" name="user-name" value="" />
        </div>
        <div>
            <p>Số điện thoại:</p>
            <input type="text" name="user-phone" value="" />
        </div>
        <div>
            <p>Địa chỉ:</p>
            <p>
                <input type="text" name="user-address" value="" />
            </p>
        </div>
    </div>
</div>
}
else
{
    <div class="info-client-wrap">
        <div class="info-client">
            <div>
                <button class="info-client-other">Thông tin</button>
                <a href="#">Chỉnh sửa</a>
            </div>

            <div>
                <p>Người nhận:</p>
                <input type="text" name="user-name" value="@Model.UserName" />
            </div>
            <div>
                <p>Số điện thoại:</p>
                <input type="text" name="user-phone" value="@Model.Phone" />
            </div>
            <div>
                <p>Địa chỉ:</p>
                <p>
                    <input type="text" name="user-address" value="@Model.Address" />
                </p>
            </div>
        </div>
    </div>
}

